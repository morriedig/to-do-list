<% if @list.errors.present? %>
<div class="container">
	<ul style="list-style: none;border:1px solid black; border-radius: 5px;">
		<% @list.errors.each do |error, message| %>
			<li style="color:red;"><%= "#{error.capitalize} #{message}" %></li>
		<% end %>
	</ul>
</div>
<% end %>


<div class="container">
  <%= form_for @list do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title , class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :date, "Date" %>
    <%= f.text_field :date, class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :date, "Due Date" %>
    <%= f.text_field :due_date , class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :description, "Description" %>
    <%= f.text_area :description , class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :detail, "Detail" %>
    <%= f.text_area :detail, class: "form-control"  %>
    </div>
  <div class="nav-bar-form">
    <%= f.label :file_location, "File Location" %>
    <%= f.file_field :file_location, class: "form-control" %>
  </div>
    <%= f.submit class: "btn btn-default" %>
  <% end %>
</div>
